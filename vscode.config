{
  //General---------------------------------------------------------------------
  "git.enableSmartCommit": true,
  "files.eol": "\n",
  "editor.minimap.enabled": false,
  "editor.fontFamily": "Fira Code Medium",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.rulers": [80],
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "Fira Code Medium",
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.config": "shellscript"
  },
  "workbench.colorTheme": "One Dark Pro",
  //Extensions------------------------------------------------------------------
  "workbench.iconTheme": "vscode-icons",
  "todo-tree.filtering.excludeGlobs": ["node_mudules"],
  "vsicons.dontShowNewVersionMessage": true,
  "gitlens.codeLens.enabled": false,
  //TypeScript------------------------------------------------------------------
  "typescript.updateImportsOnFileMove.enabled": "always",
  "python.defaultInterpreterPath": "~/anaconda3/bin/python",
  "python.showStartPage": false,
  "[python]": {
    "editor.tabSize": 4
  },
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true
  },
  "workbench.activityBar.visible": false,
  "terminal.integrated.defaultProfile.linux": "fish",
  "python.pythonPath": "/home/binh/anaconda3/bin/python"
}
